<?xml version="1.0" encoding="UTF-8"?>
<mgrdata>
  <plugin name="pmparkingerip">
    <group>payment_method</group>
    <msg name="desc_short" lang="ru">ЕРИП (Parking.by)</msg>
    <msg name="desc_short" lang="en">ERIP (Parking.by)</msg>
    <msg name="desc_full" lang="ru">ЕРИП через API от Parking.by</msg>
