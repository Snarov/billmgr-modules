      <page name="methodprops">
        <field name="API_USER">
          <input name="API_USER" private="yes" required="yes" type="text"/>
        </field>
        <field name="API_PASSWORD">
          <input name="API_PASSWORD" private="yes" required="yes" type="password"/>
        </field>
        <field name="API_KEY">
          <input name="API_KEY" private="yes" required="yes" type="text"/>
        </field>
	<field name="ERIP_ID">
          <input name="ERIP_ID" private="no" required="yes" type="text"/>
        </field>
      </page>
    </form>
  </metadata>

  <lang name="en">
    <messages name="label_paymethod">
      <msg name="pmparkingerip">ERIP (Parking.by)</msg>
      <msg name="module_pmparkingerip">ERIP (Parking.by)</msg>
    </messages>
    <messages name="paymethod.edit.parkingerip">
      <msg name="API_USER">API username</msg>
      <msg name="hint_API_ID">Username from Parking.by API account</msg>
      <msg name="API_PASSWORD">API password</msg>
