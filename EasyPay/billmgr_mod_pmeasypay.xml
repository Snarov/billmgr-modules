<?xml version="1.0" encoding="UTF-8"?>
<mgrdata>
  <plugin name="pmeasypay">
    <group>payment_method</group>
    <msg name="desc_short" lang="ru">EasyPay</msg>
    <msg name="desc_short" lang="en">EasyPay</msg>
    <msg name="desc_full" lang="ru">EasyPay через API от ООО "Открытый Контакт"</msg>
    <msg name="desc_full" lang="en">ERIP via API by ООО "Открытый Контакт" </msg>
    <msg name="price" lang="ru">Бесплатно</msg>
    <msg name="price" lang="en">Free</msg>
  </plugin>

  <metadata name="paymethod.edit.easypay" type="form">
    <form>
      <page name="methodprops">
        <field name="MER_NO">
          <input name="MER_NO" private="yes" required="yes" type="text"/>
        </field>
        <field name="WEB_KEY">
          <input name="WEB_KEY" private="yes" required="yes" type="password"/>
        </field>
      </page>
    </form>
  </metadata>

  <lang name="en">
    <messages name="label_paymethod">
      <msg name="pmeasypay">EasyPay</msg>
      <msg name="module_pmeasypay">EasyPay</msg>
    </messages>
    <messages name="paymethod.edit.easypay">
      <msg name="MER_NO">Merchant number</msg>
      <msg name="hint_MER_NO">Mercchant number in EasyPay. Format: 'okXXXX' where X is from 0 to 9</msg>
      <msg name="WEB_KEY">Web key</msg>
      <msg name="hint_WEB_KEY">Key for subscribing bills. Format: 'XXXXXXXXXXXXXXXXX'</msg>
    </messages>
  </lang>

  <lang name="ru">
      <messages name="label_paymethod">
      <msg name="pmeasypay">EasyPay</msg>
      <msg name="module_pmeasypay">ЕРИП (Parking.by)</msg>
    </messages>
    <messages name="paymethod.edit.easypay">
      <msg name="MER_NO">Номер поставщика</msg>
      <msg name="hint_MER_NO">Номер поставщика в EasyPay вида 'okXXXX', где X - десятичная цифра</msg>
      <msg name="WEB_KEY">Web-ключ</msg>
      <msg name="hint_WEB_KEY">Ключ для подписания счетов вида 'XXXXXXXXXXXXXXXXX'</msg>
    </messages>
  </lang>
</mgrdata>
